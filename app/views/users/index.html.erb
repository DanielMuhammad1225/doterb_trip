<div class="d-flex align-items-center justify-content-center">
<p id="notice"><%= notice %></p>

<h1 class="fw-bold">Users</h1>
</div>
<table class="table table-hover table-bordered border-dark table-striped">
  <thead class="table-dark">
    <tr>
      <th>Email</th>
      <th>Full name</th>
      <th>Phone</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.full_name %></td>
        <td><%= user.phone %></td>
        <td><%= user.address %></td>
        <td class="fw-bold"><%= link_to 'Show', user %></td>
        <td class="fw-bold"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class="fw-bold"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<ul class="list-unstyled">

  <ul> 
    <li class="fw-bold"><%= link_to 'New User', new_user_path %></li>
  </ul>


