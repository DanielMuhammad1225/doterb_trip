<div class="d-flex align-items-center justify-content-center">
<p id="notice"><%= notice %></p>

<h1 class="fw-bold">Attendances</h1>
</div>
<table class="table table-hover table-bordered border-dark table-striped">
  <thead class="table-dark">
    <tr>
      <th>User</th>
      <th>Event</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class= "menu_wrapper">
      <div class="navbar" id="navbar">
        <li>
           <a><i class="fa fa-home" aria-hidden="true"></i></a>
            <a><i class="fa fa-calendar-o" aria-hidden="true"></i></a>
        </li>
      </div>
    </div>



    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.user_id %></td>
        <td><%= attendance.event_id %></td>
        <td><%= attendance.status %></td>
        <td><%= link_to 'Show', attendance %></td>
        <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
        <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %> 
  </tbody>
</table>

<br>
<%= paginate @attendances %>
<%= link_to 'New Attendance', new_attendance_path %>

