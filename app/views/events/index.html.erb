<div class="d-flex align-items-center justify-content-center">

<%= <%= search_form_for @q url: :event_path do |f| %>

  <%= f.label :name_eq %>
  <%= f.search_field :name_eq %>

  <%= f.submit 'Search', class: 'btn btn-primary' %>
<% end %>
<p id="notice"><%= notice %></p>

<h1 class="fw-bold">Events</h1>
</div>
<table class="table table-hover table-bordered border-dark table-striped">
  <thead class="table-dark">
    <tr>
      <th>Name</th> 
      <th>Start date</th>
      <th>End date</th>
      <th>Description</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.description %></td>
        <td><%= image_tag(event.photo.url.to_s )%></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  
<li><%= link_to 'New Event', new_event_path %></li>
